FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
COPY ["AAI.Core/", "AAI.Core/"]
COPY ["AAI.Rest.Services/", "AAI.Rest.Services/"]
RUN dotnet restore "AAI.Rest.Services/AAI.Rest.Services.csproj"
COPY . .
RUN dotnet restore "AAI.Core/AAI.Core.csproj"
RUN dotnet restore "AAI.Rest.Services/AAI.Rest.Services.csproj"
RUN dotnet build "AAI.Core/AAI.Core.csproj" -c Release -o /app
RUN dotnet build "AAI.Rest.Services/AAI.Rest.Services.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "AAI.Rest.Services/AAI.Rest.Services.csproj" -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:9.0 as final
WORKDIR /app
ENV ASPNETCORE_HTTP_PORTS=80
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "AAI.Rest.Services.dll"]